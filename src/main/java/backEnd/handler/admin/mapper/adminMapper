<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AdminMapper">

    <!-- 查询管理员权限 -->
    <select id="getAdminRight" parameterType="backEnd.handler.admin.model.AdminRight">
        SELECT u.user_id AS adminId, g.group_id AS adminGroupId, r.right_url AS adminRightUrl
        FROM t_user u
        LEFT JOIN IN t_group g
            ON u.group_id = g.group_id
        LEFT JOIN IN t_right r
            ON g.right_id = r.right_id
        WHERE u.user_id = #{adminId}
    </select>

</mapper>